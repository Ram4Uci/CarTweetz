<Page
    x:Class="CarTweetz.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CarTweetz"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Black">
        <TextBlock x:ConnectionId='1' x:Name="textBlock"  Height="75" TextAlignment="Center" TextWrapping="Wrap" Text="Menu"  Width="250" FontSize="50" FontWeight="ExtraBold" FontFamily="Book Antiqua" Margin="0,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="Snow" />
        <Button x:ConnectionId='2' x:Name="Obd" Content="OBD" HorizontalAlignment="Left" Margin="10,400,0,0" VerticalAlignment="Top" Height="125" Width="160" FontSize="30" FontWeight="ExtraBlack"                   Background="#FF0A67CD" />
        <Button x:ConnectionId='3' x:Name="Gps" Background="#FF1BA927" Content="GPS" HorizontalAlignment="Left" Margin="185,250,0,0" VerticalAlignment="Top" Height="125" Width="165" FontSize="30" FontWeight="ExtraBlack"                   />
        <Button x:ConnectionId='4' x:Name="Access" Background="OrangeRed" Content="ACCESS" HorizontalAlignment="Left" Margin="10,250,0,0" VerticalAlignment="Top" Height="125" Width="160" FontSize="30" FontWeight="ExtraBlack"                      />
        <Button x:ConnectionId='5' x:Name="Sensors" Background="#FFFAB70A" Content="SENSORS" HorizontalAlignment="Left" Margin="185,400,0,0" VerticalAlignment="Top" Height="125" Width="165" FontSize="30" FontWeight="ExtraBlack"                      />
        <Button x:ConnectionId='6' x:Name="button" Content="Signout" HorizontalAlignment="Right" Margin="0,5,10,0" VerticalAlignment="Top" FontWeight="Bold" Background="#33000000" Foreground="White"                      BorderBrush="White" FontSize="20"/>
    </Grid>
</Page>

